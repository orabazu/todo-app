{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    // "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "components/*": [
        "src/components/*"
      ],
      "types/*": [
        "src/types/*"
      ],
      "const/*": [
        "src/const/*"
      ],
      "reducers/*": [
        "src/reducers/*"
      ],
      "views/*": [
        "src/views/*"
      ],
      "hooks/*": [
        "src/hooks/*"
      ],
      "assets/*": [
        "src/assets/*"
      ],
      "lib/*": [
        "src/lib/*"
      ],
      "services/*": [
        "src/services/*"
      ],
      "actions/*": [
        "src/actions/*"
      ],
    },
    "typeRoots": [
      "./src/types",
      "node_modules/@types",
      "@types"
    ],
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "dist"
  ],
}
